<div class="container">
	<p class="post_date"><%= post.created_at.to_date.to_formatted_s(:long_ordinal) %></p>
	<div class="blog_title"><%= link_to_unless_current h(post.title), post, style: "color:black" %></div>
	
		<hr class="line blog" />
	
	<div class="author_name"><%= image_tag post.author_picture, class: "author_portrait" %><p class="blog_author"><%= post.author_name %> Melone<p></div>
	<br />
	<br />
	<p class="blog_content"><%= h(ERB.new(post.body).result(binding).html_safe) %></p>
	<br />
	<div class="fb-like" data-href="http://www.familygroups.org/posts/<%= "#{post.id}" %>" data-layout="standard" data-action="like" data-show-faces="false" data-share="false"></div>
	<br/>
	<div class="fb-share-button" data-href="http://www.familygroups.org/posts/<%= "#{post.id}" %>" data-type="button_count" style="margin-bottom:5px"></div>
	<br/>
	<a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.familygroups.org/posts/<%= "#{post.id}" %>" data-via="Family_Groups" data-related="Family_Groups">Tweet</a>
	<br/>
	<a href="//www.pinterest.com/pin/create/button/" data-pin-do="buttonBookmark" ><img src="//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_gray_20.png" /></a><br/>
	<g:plusone></g:plusone>
	<br />
	<br />
</div>