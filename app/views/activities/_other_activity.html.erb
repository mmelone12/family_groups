<div id="follow_form<%= "#{activity.id}" %>">                      
  <div class="four columns portfolio-item activities">
    <div class="our-work">
        <a class="img-overlay">
        	<div class= "min-height">
            <% if followed_activity.image_path.blank? %>
              <% if followed_activity.uploader_image.blank? %>
                <%= image_tag "/assets/rotate/#{random_image}" %>
              <% else %>
                <%= image_tag followed_activity.uploader_image, size: "40" %>
              <% end %>
            <% else %>
              <%= image_tag followed_activity.image_path, size: "40" %>
            <% end %>
            <div class="img-overlay-div">
              <div class="other_activities_showme">
            <h4>
            <%= if activity.title.length > 50; activity.title.truncate(50) + "...  "; else activity.title; end %>
            </h4>
            <h5>
            <br />
            <%= if activity.desc.length > 130; activity.desc.truncate(129); else activity.desc; end %>...<div class="learn_more"> Learn More</div>
            </h5>
              </div>
            <%= form_for(current_user.activity_relationships.build(activity_followed_id: 
                             activity.id), remote: true) do |f| %> 
                <div><%= f.hidden_field :activity_followed_id %></div>
                <%= f.submit "Add to My Activities", class: "b-item" %>
            <% end %>
            </div>
          </div>
        </a>
        <% if activity.title.length > 30 %>
        <h3>  
          <div class="smaller_size">
            <%= link_to activity.title.truncate(50), "#", class: "other_activities_showme" %><span><%= link_to activity.start_date.to_s, "#", class: "other_activities_showme" %></span>
          </div>
        </h3>
        <% else %>
        <h3><%= link_to activity.title, "#", class: "other_activities_showme" %><span><%= link_to activity.start_date.to_s, "#", class: "other_activities_showme" %></span></h3>
        <% end %>
    </div>
  </div>
</div>				