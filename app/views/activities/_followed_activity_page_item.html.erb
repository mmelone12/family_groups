<div id="follow_form<%= "#{activity.id}" %>">                      
  <div class="four columns portfolio-item activities">
    <div class="our-work">
        <a class="img-overlay">
        	<div class= "min-height">
              <%= if activity.uploader_image.blank?; image_tag activity.image_path; end %>
              <%= image_tag activity.uploader_image %>
            <div class="img-overlay-div">
              <div class="followed_items_page">
            <h4>
            <%= if activity.title.length > 50; activity.title.truncate(50) + "...  "; else activity.title; end %>
            </h4>
            <h5>
            <br />
            <%= if activity.desc.length > 130; activity.desc.truncate(129); else activity.desc; end %>...<div class="learn_more"> Learn More</div>
            </h5>
              </div>
            <%= form_for(current_user.activity_relationships.find_by(activity_followed_id: 
                             activity.id), html: { method: :delete }, remote: true) do |f| %> 
                <%= f.submit "Unfollow", class: "b-item" %>
            <% end %>
            </div>
          </div>
        </a>
        <% if activity.title.length > 30 %>
        <h3>  
          <div class="smaller_size">
            <%= link_to activity.title.truncate(50), "#", class: "followed_items_page" %><span><%= link_to "Click here to learn more", "#", class: "followed_items_page" %></span>
          </div>
        </h3>
        <% else %>
        <h3><%= link_to activity.title, "#", class: "followed_items_page" %><span><%= link_to "Click here to learn more", "#", class: "followed_items_page" %></span></h3>
        <% end %>
    </div>
  </div>
</div>				