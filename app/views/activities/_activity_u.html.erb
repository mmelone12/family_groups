<div class="four columns portfolio-item activities">
    <div class="our-work">
        <%= link_to activity_path(activity), class: "img-overlay2" do %>
        	<div class= "min-height-activities">
             <%= if activity.uploader_image.blank?; image_tag activity.image_path, alt: "A great event for families", size: "420x420"; else image_tag activity.uploader_image, size: "420x420"; end %>
            <div class="img-overlay-div2">
            <h4 class="smaller">
            <%= if activity.title.length > 60; activity.title.truncate(60) + "...  "; else activity.title; end %>
            </h4>
            <h5>
            <br />
            <%= if activity.desc.length > 130; activity.desc.truncate(130); else activity.desc; end %>...
            </h5>
                  <div class="button", style="margin-left:52px">
                    <div class="button_modified">
                  Learn More
                    </div>
                  </div>
            </div>
          </div>
        <% end %>
        <h3>  
          <div class="smaller_size">
            <%= link_to activity.title.truncate(60), activity_path(activity), class: "show_it" %><span>
              <%= link_to activity.start_date.to_formatted_s(:rfc822), activity_path(activity), class: "show_it" %></span>
          </div>
        </h3>
    </div>
  </div>			