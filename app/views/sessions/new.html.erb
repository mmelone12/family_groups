<h1>Sign In</h1>

    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", style: 'color:white', class: "b-color" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>