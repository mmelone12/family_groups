		<div id="page-content" class="full-width container projects">

			<div class="container">
				<div class="sixteen columns">
					<h3 class="shortcodes">What's going on in <%= @city %>.</h3>
					<div id="filters">
						<ul class="option-set" data-option-key="filter">
							<li><a href="#filter" data-option-value="*">See All</a></li>
							<li><a href="#filter" class="selected" data-option-value=".activities">Activities</a></li>
							<li><a href="#filter" data-option-value=".groups">Groups</a></li>
							<li><a href="#filter" data-option-value=".places">Places</a></li>
							<li><a href="#filter" data-option-value=".interests">Interests</a></li>
						</ul>
					</div>
				</div>
			</div>
		
			<div class="container">
				<div id="portfolio-wrapper">
				<% @places.each do |place| %>
					<%= render :partial => 'places/place_u', :locals => { :place => place } %>
				<% end %>
				<% if @activities.blank? && @recurring_activities.blank? %>
					<div class="four columns portfolio-item activities">
        				<br />
        				<br />
							<ul>
				  				<li>We don't have activities for <% @user.city %> today, but please check again in a few days!</li>
			    			</ul>
					</div>
					<% else %>
  					<% @activities.each do |activity| %>
						<%= render :partial => 'activities/activity_u', :locals => { :activity => activity } %>
					<% end %>
					<% @recurring_activities.each do |activity| %>
						<%= render :partial => 'activities/activity_u', :locals => { :activity => activity } %>
					<% end %>
				<% end %>
				<% @groups.each do |group| %>
					<%= render :partial => 'groups/group_u', :locals => { :group => group } %>
				<% end %>	
				<% @interests.each do |interest| %>
  					<%= render :partial => 'interests/interest_u', :locals => {:interest => interest} %> 
				<% end %>	
									<%= render :partial => 'js/sign_up.js.erb' %>				
				</div>
			</div>
		</div>
