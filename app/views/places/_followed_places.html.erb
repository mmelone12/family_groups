<% if place.image_path.blank? %>
	<div class="img-wrap1">
    <%= image_tag place.uploader_image, size: "50", class: "followed_items", id: "disappear_follow#{place.id}" %>
        <div class="img-overlay1">
    		<p><div class="followed_items1"><%= place.name.truncate(25) %></div></p>
    	</div>
    </div>
<% else %>
	<div class="img-wrap1">
    <%= image_tag place.image_path, size: "50", class: "followed_items", id: "disappear_follow#{place.id}" %>
    	<div class="img-overlay1">
    		<p><div class="followed_items1"><%= place.name.truncate(25) %></div></p>
    	</div>
    </div>
<% end %>