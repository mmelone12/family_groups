<div class="four columns portfolio-item places">
    <div class="our-work">
        <%= link_to place_path(place), class: "img-overlay2" do %>
        	<div class= "min-height-activities">
            <%= if place.uploader_image.blank?; image_tag place.image_path, alt: "A great place for families", size: "420x420"; else image_tag place.uploader_image, size: "420x420"; end %>
            <div class="img-overlay-div2">
            <h4>
            <%= if place.name.length > 50; place.name.truncate(50) + "...  "; else place.name; end %>
            </h4>
            <h5>
            <br />
            <%= if place.desc.length > 130; place.desc.truncate(129); else place.desc; end %>...<div class="learn_more"> <strong>Learn More</strong></div>
            </h5>
                  <div class="button", style="margin-left:52px">
                    <div class="button_modified">
                  Learn More
                    </div>
                  </div>
            </div>
          </div>
        <% end %>
        <% if place.name.length > 30 %>
        <h3>  
          <div class="smaller_size">
            <%= link_to place.name.truncate(50), place_path(place), class: "show_it" %><span><%= link_to place.city, place_path(place), class: "show_it" %></span>
          </div>
        </h3>
        <% else %>
        <h3><%= link_to place.name.truncate(30), place_path(place), class: "show_it" %><span><%= link_to place.city, place_path(place), class: "show_it" %></span></h3>
        <% end %>
    </div>
</div>				