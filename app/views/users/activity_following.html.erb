<div id="wrap">
	<header>
		<div class="container">
			<div class="one-third column">
				<div class="logo">
					<a href="index.html">
						<%= image_tag("fglogo1.png", :alt => "logo") %>
					</a>
				</div>
				<h1>
				Find local events and meet great parents.
				</h1>
			</div>
<div class="two-thirds column">
				<nav id="menu" class="navigation">
					<ul id="nav" class="clearfix">
						<li><a href="index.html">Home<span>home info</span></a>
							<ul>
								<li><a href="index02.html">Index 02</a></li>
								<li><a href="index03.html">Index 03</a></li>
